<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/llAllElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/imageAndName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvPhoto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Сигал Лев"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Elements"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="89199176830"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="velagissellint@gmail.com"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:text="Хороший работник!"
                android:textSize="25dp" />

            <Switch
                android:id="@+id/SwitchBirthday"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Напоминание о дне рождения"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">

                <fragment
                    android:id="@+id/mapp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".MainActivity"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="144dp" />

                <Button
                    android:id="@+id/buttonAll"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:text="ALL"

                    android:textSize="13.5dp"
                    app:backgroundTint="#5E5757"
                    app:layout_constraintStart_toStartOf="@+id/mapp"
                    app:layout_constraintTop_toTopOf="@+id/mapp" />

                <Button
                    android:id="@+id/buildDirection"
                    android:layout_width="61dp"
                    android:layout_height="0dp"
                    android:alpha="0.6"
                    android:text="↑"
                    android:textSize="25dp"
                    app:backgroundTint="#5E5757"
                    app:layout_constraintEnd_toEndOf="@+id/mapp"
                    app:layout_constraintTop_toTopOf="@+id/mapp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>